{% extends 'app/index_template.html' %}}

{% block content %}
<h3>{{ title }}</h3>

<section>
   <form method="POST" enctype="multipart/form-data">
     {% csrf_token %}
      <p><label for="name">Название:</label><br>
        <input type="text" id="name" name="name" maxlength="10" required></p>

      <p>
        <label for="type_tr"> Тип транзистора:</label><br>
        <select name="type_tr" id="type_tr">
          <option value="TBN">Биполярный NPN</option>
          <option value="TBP">Биполярный PNP</option>
          <option value="TPN">Полевой N-канал</option>
          <option value="TPP">Полевой p-канал</option>
          <option value="OPT">Однопереходной</option>
          <option value="GB">Транзистор NGBT</option>
        </select></p>
      <p>
         <label for="korpus"> Тип корпуса:</label><br>
          <select name="korpus" id="korpus">
            <option value="TO-92">TO-92</option>
            <option value="SOT-23">SOT-23</option>
            <option value="SOT-89">SOT-89</option>
            <option value="SOT-223">SOT-223</option>
            <option value="TO-126">TO-126</option>
            <option value="TO-220">TO-220</option>
            <option value="TO-252">TO-252</option>
            <option value="SOT-669">SOT-669</option>
            <option value="TO-263">TO-263</option>
         </select>
      </p>
      <p>
        <label for="descr">Краткое описание:</label><br>
        <textarea name="descr" id="descr" cols="100" rows="10"></textarea>
      </p>
      <p>
        <label for="path_file"> Файл DataSheet:</label><br>
        <input type="file" name="path_file" id="path_file">
      </p>
     <p>
       <button type="submit">Добавить в каталог</button>
     </p>

   </form>

</section>
{% endblock %}
